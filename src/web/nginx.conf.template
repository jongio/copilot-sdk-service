server {
    listen 80;
    root /usr/share/nginx/html;
    index index.html;

    location /summarize {
        proxy_pass ${API_URL}/summarize;
        proxy_http_version 1.1;
        proxy_set_header Host $proxy_host;
    }

    location /health {
        proxy_pass ${API_URL}/health;
        proxy_http_version 1.1;
        proxy_set_header Host $proxy_host;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
